#:kivy 1.5.1

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
            
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 14  
        center_x: root.width * 1/10
        top: root.top - root.height * 8 / 10
        text: "by David"

    PongBall:
        id: pong_ball
        center: self.parent.center